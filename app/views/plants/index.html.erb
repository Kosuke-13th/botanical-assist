<h1>Botanical Assist</h1>
<main class="main">
  <div class="inner">
    <% if user_signed_in? %>
     <%= week_calendar events: @plants do |date, events| %>
     <%= date.day %>
      <% events.each do |event| %>
      <div>
       <% if event.watering_id = 3 %>
         <%= "水やり"%>
       <% end %>
     </div>
     <% end %>
    <% end %>
    <%# ログインしているときは以下を表示する %>
      <div class="greeting">
        こんにちは、
         <%= link_to current_user.name, edit_user_registration_path(current_user.id), class: :greeting__link%>
        さん
      </div>
    <% end %>
    <%# // ログインしているときは上記を表示する %>
    <div class="card__wrapper">
       <%= render partial: "plants", collection: @plants %>
      <%# 投稿機能実装後、部分テンプレートでプロトタイプ投稿一覧を表示する %>
    </div>
  </div>
</main>

