<div class="card">
  <% if plant.image.attached? %>
    <%= link_to image_tag(plant.image, class: :card__img ), plant_path(plant.id) %>
    <% else %>
    <%= link_to image_tag("/assets/noimage.jpg", class: :card__img), plant_path(plant.id) %>
  <% end %>
  <div class="card__body">
    <%= (plant.watering_day).strftime("%Y/%m/%d") %>
  </div>
  <div class="card__title" >
    <% if plant.growth_time_id == 2 %>
    <%= "成長期です。"%><br  />
    <% else %>
    <% end %>

    <%= "#{plant.plant_name}に<span style='color: blue;'>水</span>をあげます。".html_safe %>
  </div>
    <%= button_to "潅水完了", update_date_plant_path(plant), class: :form__btn %>
</div>
