<main class="main">
  <div class="inner">
    <div class="plant__wrapper">
      <p class="plant__hedding">
        <%= @plant.plant_name %>
      </p>
        <div class="prototype__manage">
          <%= link_to "編集する", edit_plant_path(@plant.id), class: :form__btn %>
        </div>
      <div class="prototype__image">
        <%= image_tag @plant.image %>
      </div>
      <div class="prototype__body">
        <div class="prototype__detail">
          <p class="detail__title">植物名</p>
          <p class="detail__message">
            <%= @plant.plant_name %>
          </p>
        </div>
        <div class="prototype__detail">
          <p class="detail__title"></p>
          <p class="detail__message">
            <%= @plant.plant_text %>
          </p>
        </div>
      </div>
    </div>
  </div>
</main>
