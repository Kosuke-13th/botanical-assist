<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{current_user.name}さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= current_user.name %></td>
          </tr>
          <tr>
            <th class="table__col1">地域</th>
            <td class="table__col2"><%= current_user.region_id %></td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{current_user.name}さんの持っている植物"%>
      </h2>
      <div class="user__card">
         <% @plants.each do |plant| %>
         <%= render partial: "plants/plant", locals: { plant: plant } %>
         <% end %>
      </div>
    </div>
  </div>
</div>